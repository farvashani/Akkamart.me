@page "/login"
<div id="login">
        <form action="login" method="POST">
            <input type="text" name="username" id="userMembership" autocomplete="username" placeholder="Username / mobile" required/>
            <input type="password" name="password" id="password" autocomplete="current-password" placeholder="Password"/>
            <input type="submit" value="login"/>
        </form>
</div>
<div>
    <ul>
        <li><a href="forgetpassword">Forget Password</a></li>
        <li><a href="register">Register</a></li>
    </ul>
</div>