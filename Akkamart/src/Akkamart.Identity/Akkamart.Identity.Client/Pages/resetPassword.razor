@page "/resetPassword"
<div id="resetPassword">
  <form action="resetPassword" method="POST">
    <input type="text" name="userIdentity" id="userIdentity" />
    <input
      type="password"
      name="new-password"
      autocomplete="new-password"
      required
    />
    <input
      type="password"
      name="confirm-new-password"
      autocomplete="new-password"
      required
    />
    <input type="submit" />
  </form>
</div>
